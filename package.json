{
  "name": "night-vision-ts",
  "version": "0.4.0",
  "description": "Highly customizable charting library, created for professional traders",
  "homepage": "https://github.com/project-nv/night-vision",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --host",
    "build": "vite build && node ./types/build-script.cjs",
    "build-cdn": "vite build --config vite.cdn.config.js",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.{js,ts,svelte}\" \"tests/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,svelte}\" \"tests/**/*.{js,ts}\"",
    "audit": "npm audit",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "prepublishOnly": "npm run build"
  },
  "main": "./dist/night-vision.js",
  "module": "./dist/night-vision.js",
  "types": "./dist/night-vision.d.ts",
  "unpkg": "./dist/night-vision.umd.cjs",
  "exports": {
    ".": {
      "types": "./dist/night-vision.d.ts",
      "import": "./dist/night-vision.js",
      "require": "./dist/night-vision.umd.cjs"
    }
  },
  "author": "ChartMaster",
  "license": "ISC",
  "dependencies": {
    "@freecodecamp/strip-comments": "^3.0.1",
    "arrayslicer": "^1.2.3",
    "hammerjs": "^2.0.8",
    "hamsterjs": "^1.1.3",
    "lz-string": "^1.5.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/hammerjs": "^2.0.46",
    "@types/node": "^25.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.4.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^6.0.0",
    "vite-plugin-banner": "^0.7.1",
    "vitest": "^4.0.18",
    "ws": "^8.18.0"
  }
}
